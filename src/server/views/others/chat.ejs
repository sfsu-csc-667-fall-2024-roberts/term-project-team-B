<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tank Game Chat</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Beau+Rivage&family=Press+Start+2P&display=swap" rel="stylesheet">
  <style>
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      text-align: center;
      background-color: #181825;
      color: #cdd6f4;
      font-family: "Press Start 2P", system-ui;
    }

    .top-right {
      position: absolute;
      top: 20px;
      right: 20px;
    }

    .top-right button {
      background-color: #bac2de;
      color: #1e1e2e;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin: 0 5px;
      font-family: "Press Start 2P", system-ui;
      padding: 10px 20px;
    }

    .top-right button:hover {
      background-color: #cdd6f4;
    }

    h1 {
      font-size: 48px;
      margin-top: 100px;
    }

    .chat-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 80%;
      max-width: 600px;
      background-color: #1e1e2e;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

    .messages {
      width: 100%;
      height: 300px;
      overflow-y: auto;
      background-color: #2e2e3e;
      border-radius: 10px;
      padding: 10px;
      margin-bottom: 20px;
      color: #cdd6f4;
    }

    .message {
      margin-bottom: 10px;
      text-align: left;
    }

    .message span {
      font-weight: bold;
    }

    .message.right {
      text-align: right;
    }

    .input-container {
      display: flex;
      width: 100%;
    }

    .input-container input {
      flex: 1;
      padding: 10px;
      border: 3px solid #cdd6f4;
      border-radius: 4px;
      background-color: #1e1e2e;
      color: #cdd6f4;
      font-family: "Press Start 2P", system-ui;
    }

    .input-container button {
      padding: 10px 20px;
      background-color: #bac2de;
      color: #1e1e2e;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-family: "Press Start 2P", system-ui;
      margin-left: 10px;
    }

    .input-container button:hover {
      background-color: #cdd6f4;
    }
  </style>
</head>

<body>
  <div class="top-right">
    <button onclick="window.location.href='/login'">Logout</button>
    <button onclick="window.location.href='/profile'">Profile</button>
    <button onclick="window.location.href='/gameLanding'">Exit</button>
  </div>
  <h1>Chat Room</h1>
  <div class="chat-container">
    <div class="messages" id="messages"></div>
    <div class="input-container">
      <input type="text" id="messageInput" placeholder="Type your message here...">
      <button onclick="sendMessage()">Send</button>
    </div>
  </div>

  <script>
    const messages = document.getElementById('messages');
    const messageInput = document.getElementById('messageInput');

    function sendMessage() {
      const messageText = messageInput.value.trim();
      if (messageText !== '') {
        const messageElement = document.createElement('div');
        messageElement.classList.add('message');
        messageElement.innerHTML = `<span>You:</span> ${messageText}`;
        messages.appendChild(messageElement);
        messageInput.value = '';
        messages.scrollTop = messages.scrollHeight;

        setTimeout(() => {
          const replyElement = document.createElement('div');
          replyElement.classList.add('message', 'right');
          if (messageText.toLowerCase() === 'hey guys') {
            replyElement.innerHTML = `<span>Ali:</span> Hi`;
          } else if (messageText.toLowerCase() === 'is omar online?') {
            replyElement.innerHTML = `<span>Omar:</span> Yo`;
          } else if (messageText.toLowerCase() === 'lets play') {
            replyElement.innerHTML = `<span>Ali:</span> Ok`;
          } else {
            replyElement.innerHTML = `<span>Ali:</span> I don't understand`;
          }
          messages.appendChild(replyElement);
          messages.scrollTop = messages.scrollHeight;
        }, 1000);
      }
    }

    messageInput.addEventListener('keypress', function (e) {
      if (e.key === 'Enter') {
        sendMessage();
      }
    });
  </script>
</body>

</html>
